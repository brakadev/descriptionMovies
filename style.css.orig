*,
*::after,
*::before {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    display: grid;
    align-items: start;
    justify-content: center;
    height: 100vh;
}

.movies__container {
    width: 40rem;
    max-height: 80vh;
    background-color: rgb(255, 255, 255);
    align-content: center;
    text-align: center;
    border-radius: 1rem;
}


h1 {
    font-size: 3rem;
    font-family: system-ui, -apple-system;
    margin-bottom: 1.5rem;
    color: rgb(10, 46, 79);
}

input,
button {
    height: 2rem;
    border-radius: 0.4em;
    border: 2px solid rgba(45, 36, 16, 0.267);
    font-family: system-ui;
    display: inline-block;
}


input:focus {
    outline: none;
    color: rgb(127, 127, 127);
}

input {
    width: 60%;
    padding-left: 1rem;
    color: rgb(127, 127, 127);
}

button {
    width: 20%;
    cursor: pointer;
    font-size: 18px;
    font-weight: 600;
}

#results {
    margin-top: 20px;
    text-align: left;
}

.movie {
    margin-bottom: 1rem;
    padding: 2rem;
    background-color: #f5f5f5;
    border-radius: 1rem;
}

.movie img {
    max-width: 100px;
    float: left;
    margin-right: 10px;
}

.movie h2 {
    font-size: 18px;
    margin-top: 0;
}

.movie p {
    min-height: 3rem;
    margin: 5px 0;
}